<%= form_with scope: :article, url: create_article_path, local: true do |f|%>

<section class="position-absolute top-50 start-50 translate-middle">
<p>
    <% if @article.errors.any? %>
    <ul>
    <% @article.errors.full_messages.each do |message| %>
        <li class="text-uppercase text-danger"><%= message %></li>
    <% end %>
    </ul>
    
    <% end %>
</p>

<p>
    <%= f.label :name %> <br/>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :body %> <br/>
    <%= f.text_field :body %>
</p>

<p>
 <%= f.submit%>
</p>

<% end %>
</section>
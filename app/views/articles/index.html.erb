
<table class="table table-striped">
    <thead>
    <tr class="table-dark">

        <th>ID</th>

        <th>Name</th>

        <th>Body</th>
        <th colspan='3'></th>

    </tr>
    </thead>

    <tbody >
    <% @articles.each do |article|%>
    <tr>
    <td><%= article.id%></td>
    <td><%= article.name%></td>
    <td><%= article.body%></td>
    <td><%= link_to "Edit Article", edit_article_path(article)  %> </td>
    <td><%= link_to "Show this article", article_path(article) %></td> 
    <td><%= button_to "Delete", article_path(article), method: :delete %></td>    
    </tr>
    <% end %>
    </tbody>
</table>
